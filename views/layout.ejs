				          </ul>
				        </li>
			    </ul>
			</div><!-- /.navbar-collapse -->
		</div><!-- /.container-fluid -->
	  </nav>	  
    </header>
	
    <%- body %>

    <footer class="footer">
      <div class="container-fluid">
      <p>You're looking at: <code><%= view.pathFromApp + '.' +view.ext %></code></p>
